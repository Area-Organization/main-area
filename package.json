{
  "name": "area-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run build:shared && bun run --filter 'apps/*' build",
    "postinstall": "bun run --filter '@area/shared' generate",
    "db:generate": "bun run --filter '@area/shared' generate",
    "db:push": "cd packages/shared && bunx prisma db push"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
