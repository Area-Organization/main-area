{
  "name": "@area/backend",
  "version": "0.0.1",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./src/app": "./src/app.ts",
    "./types": "./src/types.ts"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --env-file=../../.env --watch run src/index.ts",
    "db:generate": "bun run --env-file=../../.env prisma generate",
    "db:push": "bun run --env-file=../../.env prisma db push",
    "db:studio": "bun run --env-file=../../.env prisma studio"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "prisma": "^7.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@area/types": "workspace:*",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@sinclair/typebox": "^0.34.41",
    "better-auth": "^1.4.5",
    "elysia": "^1.4.16",
    "pg": "^8.16.3"
  }
}
