generator client {
  provider = "prisma-client"
  output   = "../src/database/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  password      String?
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions Session[]
  accounts Account[]

  connections UserConnection[]
  areas       Area[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verification")
}

model UserConnection {
  id           String    @id @default(cuid())
  serviceName  String
  accessToken  String?   @db.Text
  refreshToken String?   @db.Text
  expiresAt    DateTime?
  metadata     Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  actions   AreaAction[]
  reactions AreaReaction[]

  @@unique([userId, serviceName])
  @@index([userId])
  @@map("user_connections")
}

model Area {
  id          String  @id @default(cuid())
  name        String
  description String?
  enabled     Boolean @default(true)

  lastTriggered DateTime?
  triggerCount  Int       @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  action   AreaAction?
  reaction AreaReaction?

  @@index([userId])
  @@index([enabled])
  @@map("areas")
}

model AreaAction {
  id          String @id @default(cuid())
  serviceName String
  actionName  String
  params      Json

  area   Area   @relation(fields: [areaId], references: [id], onDelete: Cascade)
  areaId String @unique

  connection   UserConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  connectionId String

  @@map("area_actions")
}

model AreaReaction {
  id           String @id @default(cuid())
  serviceName  String
  reactionName String
  params       Json

  area   Area   @relation(fields: [areaId], references: [id], onDelete: Cascade)
  areaId String @unique

  connection   UserConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  connectionId String

  @@map("area_reactions")
}
